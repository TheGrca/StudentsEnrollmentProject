<Window x:Class="Projekat.izbrisiSaMape"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat"
        mc:Ignorable="d"
        Title="Izbriši ikonicu sa mape" Height="400" Width="500">
    <Grid>
        <Label Content="IZBRIŠI IKONICU ŠKOLE" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 10"/>
        <ListView x:Name="listaSkolaZaIzbrisati" Margin="10 60 10 60">
            <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20" Source="{Binding SlikaSkole}"/>
                    <TextBlock x:Name="nazivSkole" Text="{Binding Naziv}"/>
                </StackPanel>
             </DataTemplate>
             </ListView.ItemTemplate>
        </ListView>
        <Button Height="40" Width="100" VerticalAlignment="Bottom" Margin="0 10" Click="Button_Click">IZBRIŠI</Button>
    </Grid>
</Window>
